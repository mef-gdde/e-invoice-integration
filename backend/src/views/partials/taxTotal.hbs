<cac:TaxTotal>
    <cbc:TaxAmount currencyID="{{currency}}">{{this.tax_total.tax_amount}}</cbc:TaxAmount>
    {{#each this.tax_total.tax_subtotals}}
    <cac:TaxSubtotal>
      {{#if this.taxable_amount}}
        <cbc:TaxableAmount currencyID="{{../currency}}">{{this.taxable_amount}}</cbc:TaxableAmount>
      {{/if}}
      <cbc:TaxAmount currencyID="{{../currency}}">{{this.tax_amount}}</cbc:TaxAmount>
      <cac:TaxCategory>
        <cbc:ID>{{this.tax_category.id}}</cbc:ID>
        <cbc:Percent>{{this.tax_category.percent}}</cbc:Percent>
        <cac:TaxScheme>
          <cbc:ID>{{this.tax_category.tax_scheme}}</cbc:ID>
        </cac:TaxScheme>
      </cac:TaxCategory>
    </cac:TaxSubtotal>
    {{/each}}
  </cac:TaxTotal>